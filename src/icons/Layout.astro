---
export interface Props extends astroHTML.JSX.SVGAttributes {
    size?: number;
}

const size = Astro.props.size;
// biome-ignore lint/performance/noDelete: <explanation>
delete Astro.props.size;
---

<svg
    xmlns="http://www.w3.org/2000/svg"
    width={size ?? 24}
    height={size ?? 24}
    fill="currentColor"
    viewBox="0 0 24 24"
    {...Astro.props}
>
    <slot />
</svg>
