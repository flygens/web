---
import Github from "~/icons/Github.astro";
import X from "~/icons/X.astro";
import Linkedin from "~/icons/Linkedin.astro";
import Instagram from "~/icons/Instagram.astro";

const currentYear = new Date().getFullYear();
const navLinks = [
    { label: "Inicio", href: "#" },
    { label: "Cómo Funciona", href: "#how-it-works" },
    { label: "Características", href: "#features" },
    { label: "Casos de Uso", href: "#use-cases" },
    { label: "Blog", href: "#" },
];
---

<footer class="border-t border-white/10 py-12">
    <div class="container mx-auto px-4">
        <!-- Contenido principal -->
        <div
            class="flex flex-col items-center justify-between gap-6 md:flex-row"
        >
            <!-- Logo -->
            <div class="flex items-center">
                <div
                    class="mr-2 h-8 w-8 rounded-full bg-gradient-to-r from-blue-500 to-purple-600"
                >
                </div>
                <span class="text-xl font-bold text-white">Flygens</span>
            </div>

            <!-- Enlaces de navegación -->
            <div
                class="flex flex-wrap items-center justify-center gap-x-8 gap-y-4 text-sm text-muted-foreground"
            >
                {
                    navLinks.map((link) => (
                        <a
                            href={link.href}
                            class="transition-colors hover:text-white"
                        >
                            {link.label}
                        </a>
                    ))
                }
            </div>

            <!-- Íconos de redes sociales -->
            <div class="flex items-center gap-4">
                <a
                    href="https://github.com/flygens"
                    target="_blank"
                    class="rounded-full p-2 text-muted-foreground transition-colors hover:bg-white/5 hover:text-white"
                >
                    <Github class="h-5 w-5" />
                    <span class="sr-only">GitHub</span>
                </a>
                <a
                    href="https://x.com/tryflygens"
                    target="_blank"
                    class="rounded-full p-2 text-muted-foreground transition-colors hover:bg-white/5 hover:text-white"
                >
                    <X class="h-5 w-5" />
                    <span class="sr-only">X</span>
                </a>
                <a
                    href="https://www.instagram.com/tryflygens"
                    target="_blank"
                    class="rounded-full p-2 text-muted-foreground transition-colors hover:bg-white/5 hover:text-white"
                >
                    <Instagram class="h-5 w-5" />
                    <span class="sr-only">Instagram</span>
                </a>
                <a
                    href="https://www.linkedin.com/company/flygens"
                    target="_blank"
                    class="rounded-full p-2 text-muted-foreground transition-colors hover:bg-white/5 hover:text-white"
                >
                    <Linkedin class="h-5 w-5" />
                    <span class="sr-only">LinkedIn</span>
                </a>
            </div>
        </div>

        <!-- Derechos de autor -->
        <div class="mt-8 text-center text-sm text-muted-foreground">
            &copy; {currentYear} Flygens. All rights reserved.
        </div>
    </div>
</footer>
