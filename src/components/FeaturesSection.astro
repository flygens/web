---
import Database from "@lucide/astro/icons/database";
import Puzzle from "@lucide/astro/icons/puzzle";
import FileText from "@lucide/astro/icons/file-text";
import Globe from "@lucide/astro/icons/globe";
import Code from "@lucide/astro/icons/code";
import MessageCircle from "@lucide/astro/icons/message-circle";

const features = [
    {
        icon: Database,
        title: "Motor Avanzado de RAG",
        description:
            "Generación aumentada por recuperación potente para respuestas precisas y conscientes del contexto a partir de tus documentos.",
        color: "bg-blue-500/10 text-blue-400 border-blue-500/20",
    },
    {
        icon: Puzzle,
        title: "Integración Ilimitada de MCP",
        description:
            "Conecta cualquier herramienta MCP: APIs, bases de datos, servicios en tiempo real e integraciones personalizadas.",
        color: "bg-indigo-500/10 text-indigo-400 border-indigo-500/20",
    },
    {
        icon: FileText,
        title: "Documentos Multi-Formato",
        description:
            "Procesa sin problemas PDFs, documentos de Word, Markdown y más con análisis inteligente.",
        color: "bg-purple-500/10 text-purple-400 border-purple-500/20",
    },
    {
        icon: Globe,
        title: "Acceso a Datos en Tiempo Real",
        description:
            "Accede a datos en vivo desde APIs web, bases de datos y servicios externos a través de MCPs.",
        color: "bg-pink-500/10 text-pink-400 border-pink-500/20",
    },
    {
        icon: Code,
        title: "Ejecución de Código",
        description:
            "Ejecuta código, corre scripts y realiza cálculos complejos a través de herramientas MCP.",
        color: "bg-cyan-500/10 text-cyan-400 border-cyan-500/20",
    },
    {
        icon: MessageCircle,
        title: "Interfaz de Chat Inteligente",
        description:
            "Interfaz de usuario conversacional natural que maneja sin problemas documentos, MCPs y flujos de trabajo complejos.",
        color: "bg-green-500/10 text-green-400 border-green-500/20",
    },
];
---

<section id="features" class="py-20 md:py-28">
    <div class="container mx-auto px-4">
        <div class="mb-16 text-center">
            <h2
                class="mb-4 text-3xl font-bold text-white md:text-4xl fade-in-up"
            >
                Características
            </h2>
            <p class="mx-auto max-w-2xl text-muted-foreground fade-in-up">
                Desde comprensión de documentos hasta integraciones ilimitadas
                de herramientas: todo lo que necesitas para construir agentes de
                IA potentes
            </p>
        </div>

        <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
            {
                features.map((feature, index) => (
                    <div
                        class="fade-in-up"
                        style={`animation-delay: ${index * 0.1}s`}
                    >
                        <div class="border border-white/10 bg-black/40 backdrop-blur-sm rounded-lg overflow-hidden shadow-md">
                            <div class="p-6">
                                <div
                                    class={`mb-3 inline-flex rounded-lg border p-2 ${feature.color}`}
                                >
                                    <feature.icon class="h-6 w-6" />
                                </div>
                                <h3 class="text-lg font-semibold text-white">
                                    {feature.title}
                                </h3>
                                <p class="mt-2 text-muted-foreground">
                                    {feature.description}
                                </p>
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
