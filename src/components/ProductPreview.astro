---
import Check from "@lucide/astro/icons/check";
import CirclePlus from "@lucide/astro/icons/circle-plus";

const floatingFeatures = [
    {
        icon: Check,
        text: "Respuestas en tiempo real",
        position: "-right-4 -top-4",
        color: "bg-green-500/20 text-green-400",
    },
    {
        icon: CirclePlus,
        text: "Citas de fuentes",
        position: "-bottom-4 left-1/4",
        color: "bg-blue-500/20 text-blue-400",
    },
];
---

<section class="py-20 md:py-28">
    <div class="container mx-auto px-4">
        <div class="mb-16 text-center">
            <h2
                class="fade-in-up mb-4 text-3xl font-bold text-white md:text-4xl"
            >
                Descubre Flygens en Acci√≥n
            </h2>
            <p class="fade-in-up mx-auto max-w-2xl text-muted-foreground">
                Experimenta la interfaz intuitiva y las potentes capacidades
            </p>
        </div>

        <div
            class="relative mx-auto max-w-5xl fade-in-up"
            style="animation-delay: 0.3s;"
        >
            <div
                class="absolute -inset-1 rounded-xl bg-gradient-to-r from-blue-500 to-purple-600 opacity-75 blur-lg"
            >
            </div>
            <div
                class="relative overflow-hidden rounded-xl border border-white/10 bg-black/40 p-2 backdrop-blur-sm"
            >
                <div
                    class="flex items-center gap-2 rounded-t-lg bg-black/60 p-3"
                >
                    <div class="flex gap-1.5">
                        <div class="h-3 w-3 rounded-full bg-red-500"></div>
                        <div class="h-3 w-3 rounded-full bg-yellow-500"></div>
                        <div class="h-3 w-3 rounded-full bg-green-500"></div>
                    </div>
                    <div class="flex-1 text-center">
                        <span
                            class="badge bg-white/5 text-xs font-normal text-muted-foreground"
                        >
                            Interfaz de Chat IA de Flygens
                        </span>
                    </div>
                </div>
                <img
                    src="https://placehold.co/1000x600"
                    alt="Vista previa del panel de Flygens"
                    class="w-full rounded-b-lg"
                />
            </div>

            {
                floatingFeatures.map((feature) => (
                    <div
                        class={`absolute hidden rounded-lg border border-white/10 bg-black/80 p-3 backdrop-blur-md md:block ${feature.position}`}
                    >
                        <div class="flex items-center gap-2">
                            <div class={`rounded-full ${feature.color} p-2`}>
                                <feature.icon />
                            </div>
                            <span class="text-sm text-white">
                                {feature.text}
                            </span>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
