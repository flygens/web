---
import Users from "@lucide/astro/icons/users";
import BookOpen from "@lucide/astro/icons/book-open";
import HelpCircle from "@lucide/astro/icons/circle-help";
import Lightbulb from "@lucide/astro/icons/lightbulb";
import TrendingUp from "@lucide/astro/icons/trending-up";
import Shield from "@lucide/astro/icons/shield";

const useCases = [
    {
        icon: BookOpen,
        title: "Investigación y Análisis",
        description:
            "Combina análisis de documentos con acceso a datos en tiempo real, búsqueda web y herramientas computacionales.",
        color: "from-blue-500 to-blue-600",
    },
    {
        icon: HelpCircle,
        title: "Soporte Inteligente",
        description:
            "Crea agentes de soporte que accedan a bases de conocimiento, sistemas de tickets y datos de clientes en vivo.",
        color: "from-indigo-500 to-indigo-600",
    },
    {
        icon: Lightbulb,
        title: "Desarrollo de Productos",
        description:
            "Construye agentes que comprendan documentos, accedan a APIs, ejecuten código e integren herramientas de desarrollo.",
        color: "from-purple-500 to-purple-600",
    },
    {
        icon: TrendingUp,
        title: "Inteligencia de Negocios",
        description:
            "Combina informes con consultas en tiempo real a bases de datos, datos de mercado y análisis automatizado.",
        color: "from-pink-500 to-pink-600",
    },
    {
        icon: Users,
        title: "Recursos Humanos y Operaciones",
        description:
            "Agentes que comprendan políticas, accedan a sistemas de RR.HH., calendarios y herramientas de comunicación.",
        color: "from-cyan-500 to-cyan-600",
    },
    {
        icon: Shield,
        title: "Cumplimiento y Legal",
        description:
            "Analiza documentos accediendo a bases de datos regulatorias y herramientas de monitoreo de cumplimiento.",
        color: "from-green-500 to-green-600",
    },
];
---

<section id="use-cases" class="py-20 md:py-28">
    <div class="container mx-auto px-4">
        <!-- Título y descripción -->
        <div class="mb-16 text-center">
            <h2
                class="fade-in-up mb-4 text-3xl font-bold text-white md:text-4xl"
            >
                Posibilidades Infinitas
            </h2>
            <p class="fade-in-up mx-auto max-w-2xl text-muted-foreground">
                Con comprensión de documentos e integraciones ilimitadas de MCP,
                crea agentes de IA para cualquier industria o caso de uso.
            </p>
        </div>

        <!-- Casos de uso -->
        <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
            {
                useCases.map((useCase, index) => (
                    <div
                        class="group fade-in-up"
                        style={`animation-delay: ${index * 0.1}s`}
                    >
                        <div class="flex h-full flex-col items-center rounded-xl border border-white/10 bg-black/40 p-6 text-center transition-all duration-300 hover:border-white/20 hover:bg-black/60">
                            <div
                                class={`mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-gradient-to-r ${useCase.color} transition-transform duration-300 group-hover:scale-110`}
                            >
                                <useCase.icon class="h-8 w-8 text-white" />
                            </div>
                            <h3 class="mb-2 text-xl font-semibold text-white">
                                {useCase.title}
                            </h3>
                            <p class="text-muted-foreground">
                                {useCase.description}
                            </p>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
