---
import Puzzle from "@lucide/astro/icons/puzzle";
import Zap from "@lucide/astro/icons/zap";
import FileText from "@lucide/astro/icons/file-text";
import MessageSquare from "@lucide/astro/icons/message-square";

const steps = [
    {
        icon: FileText,
        title: "Sube Documentos",
        description:
            "Carga tus PDFs, documentos de Word o archivos Markdown para crear tu base de conocimiento.",
        color: "from-blue-500 to-blue-600",
    },
    {
        icon: Puzzle,
        title: "Agrega Herramientas MCP",
        description:
            "Conecta herramientas MCP ilimitadas: APIs, bases de datos, datos en tiempo real e integraciones personalizadas.",
        color: "from-indigo-500 to-indigo-600",
    },
    {
        icon: Zap,
        title: "Construye Tu Agente",
        description:
            "Personaliza tu agente de IA con documentos, MCPs y capacidades específicas.",
        color: "from-purple-500 to-purple-600",
    },
    {
        icon: MessageSquare,
        title: "Interactúa y Ejecuta",
        description:
            "Chatea con tu agente para consultar documentos, ejecutar acciones y acceder a datos en vivo.",
        color: "from-pink-500 to-pink-600",
    },
];
---

<section id="how-it-works" class="py-20 md:py-28">
    <div class="container mx-auto px-4">
        <div class="mb-16 text-center">
            <h2
                class="mb-4 text-3xl font-bold text-white md:text-4xl fade-in-up"
            >
                Cómo Funciona
            </h2>
            <p class="mx-auto max-w-2xl text-muted-foreground fade-in-up">
                Cuatro sencillos pasos para crear agentes de IA con capacidades
                ilimitadas a través de documentos e integraciones MCP.
            </p>
        </div>

        <div class="grid gap-8 md:grid-cols-3">
            {
                steps.map((step, index) => (
                    <div
                        class="relative fade-in-up"
                        style={`animation-delay: ${index * 0.1}s`}
                    >
                        <div class="flex flex-col items-center rounded-xl border border-white/10 bg-black/40 p-6 backdrop-blur-sm">
                            <div
                                class={`mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-gradient-to-r ${step.color}`}
                            >
                                <step.icon class="h-8 w-8 text-white" />
                            </div>
                            <h3 class="mb-2 text-xl font-semibold text-white">
                                {step.title}
                            </h3>
                            <p class="text-center text-muted-foreground">
                                {step.description}
                            </p>

                            {index < steps.length - 1 && (
                                <div class="absolute right-0 top-1/2 hidden -translate-y-1/2 translate-x-1/2 transform text-muted-foreground md:block">
                                    <svg
                                        width="40"
                                        height="40"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        xmlns="http://www.w3.org/2000/svg"
                                    >
                                        <path
                                            d="M5 12H19M19 12L12 5M19 12L12 19"
                                            stroke="currentColor"
                                            stroke-width="2"
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                        />
                                    </svg>
                                </div>
                            )}
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
